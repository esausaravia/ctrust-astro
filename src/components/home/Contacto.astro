---
import trioImg from "../../assets/img/trio.png";
import avisoPrivacidad from "../../assets/pdf/aviso-de-privacidad-dkt.pdf";

import contactScript from "../../assets/js/contact-form.js?url";
---
<script defer src={contactScript}></script>
<div id="contacto"></div>
<div class="container-fluid align-items-center mas-de-nosotros d-block d-lg-none">
	<div class="row">
		<div class="col text-center trio pa mas-de-nosotros-mobile">
			<h4 class="pt-5">¿Quieres saber más de nosotros?</h4>
			<img src={trioImg.src} class="img-fluid" alt="imagen de tres personas cercas">
		</div>
	</div>
	<div class="row formulario" style="margin-top: -1px; background-color: #ea0026;">
		<div class="col-10 offset-1 py-5 align-items-center">
			<h4 class="pb-5 text-center">¡Deja tus datos!</h4>
			<form id="form_register" novalidate="novalidate">
				<input type="hidden" id="utm_source" name="utm_source" value="">
				<input type="hidden" id="utm_medium" name="utm_medium" value="">
				<input type="hidden" id="utm_campaign" name="utm_campaign" value="">
				<input type="hidden" id="utm_term" name="utm_term" value="">
				<input type="hidden" id="utm_content" name="utm_content" value="">
				<div class="form-group">
					<input type="text" class="form-control" name="nombre" id="nombre" placeholder="Nombre:" required="">
				</div>
				<div class="form-group pt-3">
					<input type="tel" class="form-control" name="telefono" id="telefono" placeholder="Teléfono:" required="">
				</div>
				<div class="form-group pt-3">
					<input type="email" class="form-control" name="email" id="email" placeholder="E-mail:" required="">
				</div>
				<div class="form-group pt-3">
					<input type="number" class="form-control" name="edad" id="edad" placeholder="Edad:" required="">
				</div>
				<div class="form-group form-check pt-3">
					<input type="checkbox" class="form-check-input" id="politica">
					<label class="form-check-label politica" for="politica"><a href={avisoPrivacidad} target="_blank">Acepto Politica de Privacidad</a></label>
				</div>
				<p class="alert my-2 py-2 parrafo_alert mensaje text-center" style="display: none;"></p>
				<button type="submit" name="btn_activar"  id="btn_activar" class="btn btn-primary mt-3 btn_activar">Enviar</button>
			</form>
		</div>
	</div>
</div>
<div class="container-fluid mas-de-nosotros d-none d-sm-none d-md-none d-lg-block">
	<div class="row">
		<div class="col-12">
			<div class="container">
				<div class="row align-items-center  ">
					<div class="col-md-8 col-sm-10 text-center trio pa mas-de-nosotros-mobile">
						<h4 class="pt-5">¿Quieres saber más de nosotros?</h4>
						<img src={trioImg.src} class="img-fluid" alt="imagen de tres personas cercas">
					</div>
					<div class="col-md-4 col-sm-8 col-offset-sm-2 py-5 align-items-center formulario">
						<h5 class="pb-4">¡Deja tus datos!</h5>
						<form id="form_register1">
							<input type="hidden" id="utm_source1" name="utm_source1">
							<input type="hidden" id="utm_medium1" name="utm_medium1">
							<input type="hidden" id="utm_campaign1" name="utm_campaign1">
							<input type="hidden" id="utm_term1" name="utm_term1">
							<input type="hidden" id="utm_content1" name="utm_content1">
							<div class="form-group">
								<input type="text" class="form-control" name="nombre1" id="nombre1" placeholder="Nombre:" required>
							</div>
							<div class="form-group pt-3">
								<input type="tel" class="form-control" name="telefono1" id="telefono1" placeholder="Teléfono:" required>
							</div>
							<div class="form-group pt-3">
								<input type="email" class="form-control" name="email1" id="email1" placeholder="E-mail:" required>
							</div>
							<div class="form-group pt-3">
								<input type="number" class="form-control" name="edad1" id="edad"1 placeholder="Edad:" required>
							</div>
							<div class="form-group form-check pt-3">
								<input type="checkbox" class="form-check-input" id="politica1" >
								<label class="form-check-label politica1" for="politica"><a href={avisoPrivacidad} target="_blank">Acepto Politica de Privacidad</a></label>
							</div>
							<p class="alert1 my-2 py-2 parrafo_alert mensaje1 text-center" style="display: none;"></p>
							<button type="submit" name="btn_activar1"  id="btn_activar1" class="btn btn-primary mt-3 btn_activar">Enviar</button>
						</form>
					</div>
					</div>
			</div>
		</div>
	</div>
</div>